#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running linters..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
fi

# Run unit tests for affected projects
echo "ğŸ§ª Running unit tests on affected projects..."
pnpm nx affected --target=test --base=HEAD~1 --parallel=3
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix tests before committing."
  exit 1
fi

# Skip integration tests in pre-commit (they require database setup)
# Integration tests will run in CI/CD pipeline
echo "â„¹ï¸  Skipping integration tests (will run in CI/CD)"

echo "âœ… All pre-commit checks passed!"
exit 0
