#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Run all unit tests
echo "ğŸ§ª Running all unit tests..."
pnpm nx:test
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix tests before pushing."
  exit 1
fi

# Run integration tests on affected projects
echo "ğŸ”„ Running integration tests on all affected projects..."
pnpm nx affected --target=integration --base=origin/main --parallel=1
if [ $? -ne 0 ]; then
  echo "âš ï¸  Integration tests failed."
  echo "âŒ Please fix integration tests before pushing."
  exit 1
fi

# Verify security
echo "ğŸ”’ Verifying security configuration..."
pnpm env:verify
if [ $? -ne 0 ]; then
  echo "âŒ Security verification failed. Please fix security issues before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
exit 0
